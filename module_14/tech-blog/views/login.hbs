<div class="row text-left justify-content-center p-4">
    <div class="col-md-6 col-lg-4">
        <form class="form login-form card p-4 m-4">
            <h2 class="text-center">Login</h2>
            <div class="form-group p-2">
                <label for="email-login"><strong>Email</strong></label>
                <input class="form-input w-100" type="text" id="email-login" />
            </div>
            <div class="form-group p-2">
                <label for="password-login"><strong>Password</strong></label>
                <input class="form-input w-100" type="password" id="password-login" />
            </div>
            <div class="form-group text-center">
                <button class="btn btn-primary" type="submit">Login</button>
            </div>
        </form>
    </div>
    <div class="col-md-6 col-lg-4">
        <form class="form signup-form card p-4 m-4">
            <h2 class="text-center">Sign up</h2>
            <div class="form-group p-2">
                <label for="name-signup"><strong>Name</strong></label>
                <input class="form-input w-100 " type="text" id="name-signup" />
            </div>
            <div class="form-group p-2">
                <label for="email-signup"><strong>Email</strong></label>
                <input class="form-input w-100" type="text" id="email-signup" />
            </div>
            <div class="form-group p-2">
                <label for="password-signup"><strong>Password</strong></label>
                <input class="form-input w-100" type="password" id="password-signup" />
            </div>
            <div class="form-group text-center">
                <button class="btn btn-primary" type="submit">Sign up</button>
            </div>
        </form>
    </div>
</div>

<script src="./js/login.js"></script>